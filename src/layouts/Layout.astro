---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<header class="container max-w-7xl mx-auto h-16 flex items-center">
		<div class="flex space-x-5">
			<img class="h-6" src="https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RE1Mu3b?ver=5c31" alt="">
			<div class="w-[2px] h-6 bg-slate-800"></div>
		    <img class="h-6" src="xboxlogo(verde).png" alt="">
		</div>
		

		<menu class="ml-4  flex items-center">
			<a href="#" class="hover:underline-offset-[6px] decoration-2 flex items-center mx-3 justify-center">
				Game pass
				<Icon name="mdi:chevron-down" />
			</a>
			<br>
			<a href="#" class="hover:underline-offset-[6px] decoration-slice flex items-center mx-2 justify-center">
				juegos 
				<Icon name="mdi:chevron-down" />
			</a>
			<br>
			<a href="#" class="hover:underline-offset-[6px] decoration-slice flex items-center mx-2 justify-center">
				Dispositivos  
				<Icon name="mdi:chevron-down" />
			</a>
			<br>
			<a href="#" class="hover:underline-offset-[6px] decoration-slice flex items-center mx-2 justify-center">
				Juega 
			</a> 
			<a href="#" class="hover:underline-offset-[6px] decoration-slice flex items-center mx-2 justify-center">
				Comunidad 
				<Icon name="mdi:chevron-down" />
			</a>
			<a href="#" class="hover:underline-offset-[6px] decoration-slice flex items-center mx-2 justify-center">
				Más
				<Icon name="mdi:chevron-down" />
			</a>
			<menu class="ml-44 flex items-center">
				<a href="#" class="hover:underline-offset-[6px] decoration-2 flex items-center mx-3 justify-center">
					Todo Microsoft 
					<Icon name="mdi:chevron-down" />
				</a>
				<Icon name="mdi:search" class="mr-7" />
				<Icon class="size-5" name="mdi:shopping-cart-outline"  class="mr-5" />
				<Icon class="size-7" name="mdi:user-add-outline" />
			</menu>
		</menu>
	</header>
	<div>
		<video
			aria-label="Ambient video alt text"
			poster="https://assets.xboxservices.com/assets/45/5a/455a189b-0e7a-48bc-a966-9bf5ec8c08c2.jpg?n=896254_Page-Hero-1084_1920x720_01.jpg"
			muted=""
			autoplay=""
			loop=""
			alt="Video de FINAL FANTASY XIV Online con imágenes del juego y cinemáticas"
			><source
				class="heroImgDesktop"
				src="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
				type="video/mp4"
				srcset="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
			/></video
		>
	</div>








	<body>
		<slot />
	</body>
</html>
